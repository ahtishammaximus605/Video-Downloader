<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#E03B3B" />

        </shape>
    </item>
    <item android:top="0.5dp" android:bottom="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#000000" />
            <solid android:color="#00A61919" />
        </shape>
    </item>
    <item android:top="-2dp" android:bottom="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#000000" />
            <solid android:color="#00A61919" />
        </shape>
    </item>
</layer-list>
