<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoDownloader" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="materialButtonStyle">@style/button</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">false</item>

<!--        &lt;!&ndash; specify enter and exit transitions &ndash;&gt;-->
<!--        <item name="android:windowEnterTransition">@transition/slide</item>-->
<!--        <item name="android:windowExitTransition">@transition/slide</item>-->

<!--        &lt;!&ndash; optional &ndash;&gt;-->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>

        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>

        <item name="popupMenuBackground">@drawable/bg_rounded</item>
        <item name="android:colorControlActivated">@color/purple_500</item>
        <item name="android:editTextStyle">@style/EditTextViewStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>
    <style name="Theme.App.Dialog.FullScreen"
        parent="Theme.VideoDownloader">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/trans</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">
            @anim/enter_slide_up
        </item>
        <item name="android:windowExitAnimation">
            @anim/exit_slide_down
        </item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
    <style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_rounded</item>
        <item name="android:dropDownHorizontalOffset">5dp</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
    </style>
    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>


    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">0.0333333333</item>

        <item name="elevation">0dp</item>
    </style>
    <style name="EditTextViewStyle" parent="Widget.AppCompat.EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>